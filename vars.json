{
    "PROJECT": {
        "NAME": "SyncHazard",
        "VERSION": "0.0.3",
        "AUTHOR": "federico.ghedina@gmail.com"
    },

    // namespace for the lib
    "NS": "SH",

    /*
    setup here the host or ip the app will run in
    */
    "DOMAIN_OR_IP": "localhost",

    "DATASERVER": {
        "PORT": 8000,
        "HOST": "http://$DOMAIN_OR_IP$:$DATASERVER.PORT$",
        "WSPORT": 9000,
        "WS": "ws://$DOMAIN_OR_IP$:$DATASERVER.WSPORT$",
        "WATCH_INTERVALS": {
            "SHORT": 500,
            "MEDIUM": 5000,
            "LONG": 10000
        }
    },

    "SERVER": {
        "HTML": {
            "TITLE": "Sync hazard",
            "CHESS": "Chess"
        },
        "PORT": 4000,
        "TESTLIB": "$DATASERVER.HOST$/js/lib/testnject.js",
        "TIMEGAP": 30,
        "RECONNECTION": {
            "ATTEMPTS": "Infinity",
            "INTERVAL": 5000
        }
    },

    /*
    Actors check setting
    --------------------
    false : no check
    true : actions must specify actor, the client must pass actors and they must match
    */
    "CHECK_ACTORS": false,
    "NOTIFY_ACTORS_CHECKING": false,

    "START_MESSAGE": {
        "WSERVER": " WEB SOCKET SERVER started on port $DATASERVER.WSPORT$",
        "DATASERVER": " DATA SERVER started on port $DATASERVER.PORT$",
        "SERVER": " CLI SERVER started on http://$DOMAIN_OR_IP$:$SERVER.PORT$"
    }
}