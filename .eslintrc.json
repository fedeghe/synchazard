{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "$NS$": true,
        "ReactDOM": true,
        "React": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "no-extra-semi": "error",
        "semi": ["error", "always"],
        "one-var": ["error", "always"]
    }
}