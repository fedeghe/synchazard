    },

    // namespace for the lib
    "NS": "SH",

    /*
    *
    */
    "DOMAIN_OR_IP": "192.168.2.103",
    
    "DATASERVER": {
        "PORT": 8000,
        "HOST": "http://$DOMAIN_OR_IP$:$DATASERVER.PORT$",
        "WSPORT": 9000,
        "WS": "ws://$DOMAIN_OR_IP$:$DATASERVER.WSPORT$"
    },

    "SERVER": {
        "HTML": {
            "TITLE": "Sync hazard",
            "CHESS": "Chess"
        },
        "PORT": 4000,
        "TESTLIB": "$DATASERVER.HOST$/js/lib/testnject.js",
        "TIMEGAP": 30,
        "RECONNECTION": {
            "ATTEMPTS": "Infinity",
            "INTERVAL": 5000
        }
    },
    /*
    Actors check setting
    --------------------
    false : no check
    true : actions must specify actor, the client must pass actors and they must match
    */
    "CHECK_ACTORS": false,
    "NOTIFY_ACTORS_CHECKING": true,
    "START_MESSAGE": {
        "WSERVER": " WEB SOCKET SERVER started on port $DATASERVER.WSPORT$",
        "DATASERVER": " DATA SERVER started on port $DATASERVER.PORT$",
        "SERVER": " HELLO WORLD started on http://$DOMAIN_OR_IP$:$SERVER.PORT$/helloWorld.html"
    }
}